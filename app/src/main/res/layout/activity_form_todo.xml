<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FormTodo">

    <TextView
            android:id="@+id/textTitlePage"
            android:text="Form Add Todo"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
    />


    <EditText 
        android:id="@+id/titleText"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content"
            android:hint="Title :"
        app:layout_constraintTop_toBottomOf="@+id/textTitlePage"
        android:layout_marginTop="20dp"
    />

    <EditText
            android:id="@+id/decriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description:"
            app:layout_constraintTop_toBottomOf="@+id/titleText"
            android:layout_marginTop="20dp"
    />
    
    <Button
        android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:text="Send"
        app:layout_constraintTop_toBottomOf="@+id/decriptionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>